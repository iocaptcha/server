{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json"
    },
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "selector": "variable",
                "format": ["snake_case", "UPPER_CASE"]
            }
        ],
        "@typescript-eslint/explicit-function-return-type": "off"
    },
    "ignorePatterns": ["*.config.js", "dist/**/*.js"]
}
